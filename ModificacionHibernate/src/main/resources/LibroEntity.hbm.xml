<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.entidades.LibroEntity" table="libro" schema="biblio">
        <id name="idLibro" column="idLibro"/>
        <property name="isbn" column="ISBN"/>
        <property name="titulo" column="Titulo"/>
        <property name="numeroEjemplares" column="NumeroEjemplares"/>
        <many-to-one name="autorByIdAutor" class="org.example.entidades.AutorEntity">
            <column name="idAutor"/>
        </many-to-one>
        <set name="prestamosByIdLibro" inverse="true">
            <key>
                <column name="idLibro"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.entidades.PrestamoEntity"/>
        </set>
    </class>
</hibernate-mapping>