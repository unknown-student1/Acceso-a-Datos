<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.entidades.PrestamoEntity" table="prestamo" schema="biblio">
        <id name="idPrestamo" column="idPrestamo"/>
        <property name="fecha" column="fecha"/>
        <many-to-one name="usuarioByIdUsuario" class="org.example.entidades.UsuarioEntity">
            <column name="idUsuario"/>
        </many-to-one>
        <many-to-one name="libroByIdLibro" class="org.example.entidades.LibroEntity">
            <column name="idLibro"/>
        </many-to-one>
    </class>
</hibernate-mapping>