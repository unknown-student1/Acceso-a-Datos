<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.entidades.AutorEntity" table="autor" schema="biblio">
        <id name="idAutor" column="idAutor"/>
        <property name="nombreAutor" column="NombreAutor"/>
        <set name="librosByIdAutor" inverse="true">
            <key>
                <column name="idAutor"/>
            </key>
            <one-to-many not-found="ignore" class="org.example.entidades.LibroEntity"/>
        </set>
    </class>
</hibernate-mapping>