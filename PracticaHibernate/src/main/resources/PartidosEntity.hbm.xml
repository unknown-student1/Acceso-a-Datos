<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.entidades.PartidosEntity" table="partidos" schema="nba">
        <id name="codigo" column="codigo"/>
        <property name="equipoLocal" column="equipo_local"/>
        <property name="equipoVisitante" column="equipo_visitante"/>
        <property name="puntosLocal" column="puntos_local"/>
        <property name="puntosVisitante" column="puntos_visitante"/>
        <property name="temporada" column="temporada"/>
    </class>
</hibernate-mapping>